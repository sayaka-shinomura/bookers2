<p id="notice"><%= notice %></p>

<div class="container">
 <div class="row">
  <div class="com-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
   <h2>User info</h2>
   <div class="form-body p-4">
        <% if @user.errors.any? %>
          <ul class="alert alert-danger" role="alert">
            <h6 class="alert-heading">
              <%= @user.errors.count %>error prohibited this obj from being saved:
            </h6>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>

        <%= form_with model: @user do |f| %>
        <div class="form-group">
         <label for="inputName">Name</label>
         <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name", class:"form-control" %>
        </div>
        <div class="form-group">
         <label for="inputImage">Image</label>
         <%= f.file_field :profile_image, placeholder: "Image", accept: "image/*", class: "w-100" %>
        </div>
        <div class="form-group">
         <label for="inputIntrodunction">Introduction</label>
         <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", class:"form-control" %>
        </div>
        <div class="form-group">
         <%= f.submit 'Update User', class:"btn btn-secondary" %>
        <div class="form-group">
        <% end %>
   </div>
  </div>
 </div>
</div>

