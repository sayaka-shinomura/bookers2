<p id="notice"><%= notice %></p>

<div class="container px-5 px-sm-0">
  <div class="row">
     <div class="col-md-3">
            <h1>User info</h1>
            <%= image_tag @user.get_profile_image(80,80) %>
            <table class="table">
             <tbody>
              <tr></tr>
              <tr>
               <th>neme</th>
               <th><%= @user.name %></th>
              <tr>
               <th>introduction</th>
               <th><%= @user.introduction %></th>
              </tr>
             </tbody>
            </table>
            <!--#編集画面へのボタン-->
            <div class="row">
                <%= link_to edit_user_path(@user.id), class:'btn btn-outline-secondary btn-block' do %>
                <i class="fas fa-user-cog", area-hidden="true"></i>
                <% end %>
            </div>
        </div>


  <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-invarse">
        <thead>
         <tr>
          <th></th>
          <th align="left">Title</th>
          <th align="left">Opinion</th>
          <th colspan="3"></th>
         </tr>
        </thead>
        <tbody>
          <tr><% @books.each do |book| %></tr>
            <td>
             <%= image_tag book.user.get_profile_image(80,80) %>
            </td>
            <td>
             <%= link_to book_path(book) do %>
             <span><%= book.title %></span>
             <% end %>
            </td>
            <td><%= book.body %></td>
            <% end %>
        </tbody>
    </table>
  </div>
  </div>
</div>
