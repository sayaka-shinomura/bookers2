<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <script src="https://kit.fontawesome.com/a7b743e44e.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="vavbar-brand text-light" href="/">
            <span>Bookers</span>
          </a>

          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <!--#サインインしているときのヘッダー-->
            <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to users_path, class: 'nav-link text-white' do %>
              <i class="fas fa-home", area-hidden="true"></i>
              <span>Home</span>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to users_path, class: 'nav-link text-white' do %>
              <i class="fas fa-users", area-hidden="true"></i>
              <span>Users</span>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to books_path, class: 'nav-link text-white' do %>
              <i class="fas fa-book-open", area-hidden="true"></i>
              <span>Books</span>
              <% end %>
            </li>
            </li>
            <li class="nav-item">
              <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link text-white' do %>
              <i class="fas fa-sign-out-alt", area-hidden="true"></i>
              <span>Log out</span>
              <% end %>
            </li>
            <!--#サインインしていない時のヘッダー-->
            <% else %>
            <li class="nav-item">
              <%= link_to root_path, class: 'nav-link text-white' do %>
              <i class="fas fa-home", area-hidden="true"></i>
              <span>Home</span>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to about_path, class: 'nav-link text-white' do %>
              <i class="fas fa-link", area-hidden="true"></i>
              <span>About</span>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to new_user_registration_path, class: 'nav-link text-white' do %>
              <i class="fas fa-user-plus", area-hidden="true"></i>
              <span>Sign up</span>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to new_user_session_path, class: 'nav-link text-white' do %>
              <i class="fas fa-sign-in-alt", area-hidden="true"></i>
              <span>Log in</span>
              <% end %>
            </li>
            <% end %>
        </div>
      </nav>
    </header>

    <%= yield %>

    <footer class="container mt-5">
      <div class="row">
        <div class="mx-auto">
          <p>CopyRight Infratop.inc</p>
        </div>
      </div>
    </footer>

  </body>
</html>
