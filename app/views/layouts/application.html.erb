<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <script src="https://kit.fontawesome.com/a7b743e44e.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="vavbar-brand" href="/">
            <span>Bookers</span>
          </a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <!--#サインインしているときのヘッダー-->
            <% if user_signed_in? %>
            <li>
              <a class="nav-link text-light", href="/">
              <i class="fas fa-home", area-hidden="true"></i>
              Home
              </a>
            </li>
            <li>
              <a class="nav-link text-light", href="/users">
              <i class="fas fa-user-plus", area-hidden="true"></i>
              Users
              </a>
              <%= link_to 'Users', user_path(current_user.id), class: 'nav-link text-white' %>
            </li>
            <li>
              <a class="nav-link text-light", href="/books">
              <i class="fas fa-book", area-hidden="true"></i>
              Books
              </a>
            </li>
            <li>
              <a class="nav-link text-light", rel="nofollow", deta-method="delete", href="/users/sign_out">
              <i class="fas fa-sign-out-alt", area-hidden="true"></i>
              Log out
              </a>
            </li>
            <li class="nav-item">
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: 'nav-link text-white' %>
            </li>
            <!--#サインインしていない時のヘッダー-->
            <% else %>
            <li class="nav-item">
              <%= link_to 'Home', "/", class: 'nav-link text-white' %>
            </li>
            <li class="nav-item">
              <%= link_to 'About', about_path, class: 'nav-link text-white' %>
            </li>
            <li class="nav-item">
              <%= link_to "Sign in", new_user_registration_path, class: 'nav-link text-white' %>
            </li>
            <li class="nav-item">
              <%= link_to "Log in", new_user_session_path, class: 'nav-link text-white' %>
            </li>
            <% end %>
        </div>
      </nav>
    </header>

    <%= yield %>

    <footer class="container mt-5">
      <div class="row">
        <div class="mx-auto">
          <p>CopyRight Infratop.inc</p>
        </div>
      </div>
    </footer>

  </body>
</html>
