<p id="notice"><%= notice %></p>

<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">
    <h1>New book</h1>

<!--#新規投稿エラーメッセージの表示-->
<% if @book.errors.any? %>
 <%= @book.errors.count %>error prohibited this obj from being saved:
 <ul>
  <% @book.errors.full_messages.each do |message| %>
   <li><%= message %></li>
  <% end %>
 </ul>
<% end %>

<!--#ユーザー詳細-->


<!--#新規投稿-->
<%= form_with model: @book do |f| %>
 <h4>Title</h4>
 <%= f.text_field :title %>
 <h4>Opinion</h4>
 <%= f.text_area :body %>
 <%= f.submit 'Create Book' %>
<% end %>
</div>



<div class="col-md-9">
<div id="books_index-table">
  <table cellspacing="10">
    <thead>
      <tr>
        <th colspan="1"></th>
        <th align="left">Title</th>
        <th align="left">Opinion</th>
      </tr>
    </thead>
    <tr><% @books.each do |book| %></tr>
      <td></td>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
    <% end %>
  </tbody>
  </table>
</div>
</div>