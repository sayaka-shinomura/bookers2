<div class="container">
 <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
   <h1>Editing Book</h1>
   <!--#投稿編集エラーメッセージの表示-->
   <div class="form-body p-4">
    <% if @book.errors.any? %>
    <ul class="alert alert-danger" role="alert">
     <h6 class="alert-heading">
      <%= @book.errors.count %>error prohibited this obj from being saved:
     </h6>
     <% @book.errors.full_messages.each do |message| %>
     <li><%= message %></li>
     <% end %>
    </ul>
    <% end %>

    <%= form_with model: @book do |f| %>
    <div class="form-group">
     <label for="inputTitle">Title</label>
     <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"Title", class:"form-control" %>
    </div>
    <div class="form-group">
     <label for="inputBody"><div class="form-group">Opinion</label>
     <%= f.text_area :body, id:"inputBody", class:"form-control book_body" %>
    </div>
    <div class="form-group">
     <%= f.submit 'Update User', class:"btn btn-success" %>
    </div>
    <% end %>
  </div>
 </div>
</div>
